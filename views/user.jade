extends layout
block css
    link(rel='stylesheet', href='/stylesheets/user.css')
block menu
    .vernav.iconmenu
        ul
            li
                a.newuser 添加用户
            li
                a.showuserlist 用户列表
        a.togglemenu
block centercontent
    .centercontent
        - if(page.index)
            h1 dashbord
        - else if(page.userlist)
            .userlist
                .contenttitle
                    h3 用户列表
                .tableoptions
                    button Delete Selected
                table(class="usertable")
                    colgroup
                        col.con1(style="width: 4%;")
                        col.con0
                        col.con1
                        col.con0
                        col.con1
                    thead
                        tr
                            th
                                input(type="checkbox", class="checkall")
                            th 用户名
                            th 姓名
                            th 创建时间
                            th 角色
                            th 状态
                    tbody
                        - if (users)
                            each item in users
                                tr
                                    td
                                        input(type="checkbox", class="check")
                                    td= item.uid
                                    td= item.name
                                    td= item.meta.createAt
                                    td= item.level
                                    td= item.status
        - else
            .adduser
                form(method="post")
                    .contenttitle
                        h3 新增用户
                    p
                        label 用户名
                        span.field
                            input.longinput
                    p
                        label 姓名
                        span.field
                            input.longinput
                    .submitButton
                        a(href="") 保存
    script(src="../javascripts/user.js")